{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
  <div class="container">
    <div class="text-center pt-4 pb-4">
      <a href="{{ path('app_article') }}" class="btn btn-primary">Ajouter un article</a>
    </div>
    <div class="row">
      {% for article in articles %}
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{ article.title }}</h5>
              <p class="card-text">{{ article.content }}</p>
              {% if article.getCategory() is null %}
                <p class="card-text"><small class="text-muted">Pas de categorie</small></p>
              {% else %}
                <p class="card-text"><small class="text-muted">{{ article.getCategory().getName() }}</small></p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
